<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Passworld2.ResetPwd"
             Title="Reset your password">
    <VerticalStackLayout HorizontalOptions = "Center" VerticalOptions = "Center" Padding = "20" Spacing = "20">
        <Entry x:Name = "NewPwd1"
               Placeholder = "Enter new password"
               IsPassword = "True"
               WidthRequest = "250" />
        <Entry x:Name = "NewPwd2"
               Placeholder = "Enter new password again"
               IsPassword = "True"
               WidthRequest = "250" />
        <Button x:Name = "ResetBtn"
                Text = "Reset password"
                Clicked = "OnResetPwd" />
    </VerticalStackLayout>
</ContentPage>