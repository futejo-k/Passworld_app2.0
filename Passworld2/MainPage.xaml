<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Passworld2.MainPage">
    <ScrollView>
        <VerticalStackLayout Spacing = "50"  Padding = "20">
            
            <HorizontalStackLayout Spacing = "100" Padding = "20">
                <ImageButton Source = "settings.png"
                             x:Name = "SettingsBtn"
                             Clicked = "OnSettings"
                             VerticalOptions = "End"/>
                <ImageButton Source = "new.png"
                             x:Name = "NewPwdBtn"
                             Clicked = "OnNewPwd"
                             MaximumHeightRequest = "100"
                             MaximumWidthRequest = "100"
                             VerticalOptions = "End" />
            </HorizontalStackLayout>
            
            <HorizontalStackLayout>
                <Entry x:Name = "SearchPass"
                       Text = "Search password"
                       MinimumWidthRequest = "250" />
                <Button x:Name = "SearchBtn"
                        Text = "Search"
                        Clicked = "OnSearch" />
            </HorizontalStackLayout>
            
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
